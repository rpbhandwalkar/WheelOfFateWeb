@model IEnumerable<WheelOfFate.Models.Merged>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-striped table-dark table-hover">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmpId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hours)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            if (item.Hours == 0)
            {
                <tr class="table-warning">

                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EmpId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Hours)
                    </td>
                    <td>
                        <a class="btn btn-success" asp-controller="EmployeeManagement" data-bs-toggle="tooltip" data-bs-placement="top" title="Assign Hours" asp-action="AssignHours" asp-route-EmpId=@item.EmpId><i class="bi bi-clipboard-plus"></i></a>
                    </td>
                </tr>
            }
            else
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EmpId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Hours)
                    </td>
                    <td>
                        <a class="btn btn-success" asp-controller="EmployeeManagement" data-bs-toggle="tooltip" data-bs-placement="top" title="Assign Hours" asp-action="AssignHours" asp-route-EmpId=@item.EmpId><i class="bi bi-clipboard-plus"></i></a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
